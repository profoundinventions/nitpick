{
  "name": "profoundinventions/nitpick",
  "description": "Run static analyzers against two different versions of a project.",
  "minimum-stability": "stable",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Profound Inventions, LLC",
      "email": "profoundinventions@gmail.com"
    },
    {
      "name": "David Meybohm",
      "email": "dmeybohm@gmail.com"
    }
  ],
  "bin": ["bin/nitpick"],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.0",
    "phpunit/phpunit": "8.5.0"
  },
  "autoload": {
    "psr-4": {
      "ProfoundInventions\\Nitpick\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ProfoundInventions\\Nitpick\\Test\\": "test/"
    }
  }
